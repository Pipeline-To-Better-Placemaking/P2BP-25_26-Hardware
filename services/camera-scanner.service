[Unit]
Description=Camera Scanner (discover cameras and write cameras_runtime.json)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/bin/python3 -s -m scripts.camera_scanner
RemainAfterExit=yes

# Safety / hygiene
TimeoutStartSec=1200
WorkingDirectory=/opt/p2bp/camera
User=root

[Install]
WantedBy=multi-user.target
